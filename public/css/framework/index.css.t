#banner_wrap {
	width: 100%;
	overflow: hidden;
	height: 466px;
	position: relative;
	margin: 0 auto;
}
#banner {
	width: 1440px;
	height: 466px;
	margin: 0 auto;
	position: absolute;
	left: 50%;
	margin-left: -720px;
}
ul.bjqs{position:relative; list-style:none;padding:0;margin:0;overflow:hidden; display:none;}
li.bjqs-slide{position:absolute; display:none; margin: 0;}
ul.bjqs-controls{list-style:none;margin:0;padding:0;z-index:9999;}
ul.bjqs-controls.v-centered li a{position:absolute;}
ul.bjqs-controls.v-centered li.bjqs-next a{right:0;}
ul.bjqs-controls.v-centered li.bjqs-prev a{left:0;}
ol.bjqs-markers{list-style: none; padding: 0; margin: 0; width:100%; position: absolute; bottom: 20px;}
ol.bjqs-markers.h-centered{text-align: center;}
ol.bjqs-markers li{display:inline;}
ol.bjqs-markers li a{display:inline-block;}
p.bjqs-caption{display:block;width:96%;margin:0;padding:2%;position:absolute;bottom:0;}

#banner img {
	display: block;
	margin: 0 auto;
}

#index_content .title{
	background-repeat: no-repeat;
	background-position: center;
	text-indent: -999em;
	height: 70px;
	border-bottom: 1px solid #63524a;
	margin: 40px 0 16px 0;
}

#index_content .title.lw {
	background-image: url("/images/index_lw.png");
}
#index_content .title.ix {
	background-image: url("/images/index_ix.png");
}
#index_content .title.bl {
	background-image: url("/images/index_bl.png");
}
#index_content .title.fy {
	background-image: url("/images/index_fy.png");
}

#index_content .ym-gr {
	position: relative;
}

#index_content a {
	display: block;
}
#index_content img {
	display: block;
	width: 100%;
}
#index_content a.last {
	position: absolute;
	bottom: 0;
}

#index_content .ym-gbox-left {
	padding-right: 10px;
}
#index_content .ym-gbox-right {
	padding-left: 10px;
}